{
	"name": "smart-hugo",
	"displayName": "Smart Hugo",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.30.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:hugo.newPost",
		"onCommand:hugo.server",
		"onCommand:hugo.stopServer",
		"onCommand:hugo.build"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "hugo.newPost",
				"title": "New Post"
			},
			{
				"command": "hugo.server",
				"title": "Hugo Server Watch"
			},
			{
				"command": "hugo.stopServer",
				"title": "Stop Hugo Server"
			},
			{
				"command": "hugo.build",
				"title": "Build Hugo Site"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.1.4",
		"vscode": "^1.1.25",
		"tslint": "^5.8.0",
		"@types/node": "^8.10.25",
		"@types/mocha": "^2.2.42"
	},
	"dependencies": {
		"opn": "^4.0.2"
	}
}
